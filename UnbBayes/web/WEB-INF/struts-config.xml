<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans>
    </form-beans>

    <!-- ========= Global Exception Definitions ============================ -->
    <global-exceptions>
    </global-exceptions>

    <!-- ========== Global Forward Definitions ============================= -->

    <global-forwards>
    </global-forwards>

    <!-- ========== Action Mapping Definitions ============================= -->
	<action-mappings>
	
		<action path="/AcessoRestrito"
			type="br.com.digitaxi.SuccessAction">
            <forward name="success" path="/Autenticacao/PrepareExecuteAutenticacao.do"/>
		</action>

		<action path="/Logout"
			type="br.com.digitaxi.SuccessAction">
            <forward name="success" path="/Autenticacao/Logout.do"/>
		</action>

		<action path="/Geral/Principal"
			type="br.com.digitaxi.SuccessAction">
            <forward name="success" path="/geral/Principal.jsp"/>
		</action>
	
		<action 
		    path="/Geral/ConstroiPrincipal" 
			type="br.com.digitaxi.SuccessAction">
            <forward name="success" path="/geral/Principal.jsp"/>
		</action>
	
	</action-mappings>

    <!-- ========== Message Resources Definitions =========================== -->

    <message-resources parameter="MessageResources" />

    <!-- ========== Plug Ins Configuration ================================== -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
	    <set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml
	    ,/WEB-INF/validation.xml
	   	,/WEB-INF/classes/br/com/digitaxi/controleacesso/autenticacao/struts/validation-global.xml
	    ,/WEB-INF/classes/br/com/digitaxi/controleacesso/perfil/struts/validation-global.xml
	    ,/WEB-INF/classes/br/com/digitaxi/controleacesso/usuario/struts/validation-global.xml
	    ,/WEB-INF/classes/br/com/digitaxi/controleacesso/menu/struts/validation-global.xml
	    ,/WEB-INF/classes/br/com/digitaxi/pessoa/pessoa/struts/validation-global.xml
	    " />
    </plug-in>

</struts-config>