<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

<action-mappings>

<action 
    path="/Pessoa/PrepareSelecionarPessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.PrepareSearchPessoaAction"
    scope="request">
    <forward name="success" path="/pessoa/pessoa/BuscaPessoa.jsp" redirect="false"/>    
</action>

<action 
    path="/Pessoa/SelecionarPessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.SearchPessoaAction"
    scope="request">
    <forward name="success" path="/pessoa/pessoa/ListaPessoa.jsp" redirect="false"/>    
</action>

<action 
    path="/Pessoa/ExcluirPessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.DeletePessoaAction"
    scope="request">
    <forward name="success" path="/Pessoa/SelecionarPessoa.do" redirect="false"/>    
</action>

<action 
    path="/Pessoa/PrepareCreatePessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.PrepareCreatePessoaAction"
    scope="request">
    <forward name="success" path="/pessoa/pessoa/CadastraPessoa.jsp" redirect="false"/>    
</action>

<action 
    path="/Pessoa/CreatePessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.CreatePessoaAction"
    scope="request">
    <forward name="success" path="/Pessoa/SelecionarPessoa.do" redirect="false"/>    
</action>

<action 
    path="/Pessoa/PrepareUpdatePessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.PrepareUpdatePessoaAction"
    scope="request">
    <forward name="success" path="/pessoa/pessoa/EditaPessoa.jsp" redirect="false"/>    
</action>

<action 
    path="/Pessoa/UpdatePessoa" 
    name="pessoaForm"   
    type="br.com.digitaxi.pessoa.pessoa.actions.UpdatePessoaAction"
    scope="request">
    <forward name="success" path="/Pessoa/SelecionarPessoa.do" redirect="false"/>    
</action>

</action-mappings>

<message-resources key="Pessoa" parameter="br.com.digitaxi.pessoa.pessoa.resource.PessoaResources" />

</struts-config>
