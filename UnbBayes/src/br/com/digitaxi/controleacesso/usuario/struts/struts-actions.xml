<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

<action-mappings>

<action 
    path="/Usuario/PrepareSelecionarUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.PrepareSearchUsuarioAction"
    scope="request">
    <forward name="success" path="/controleacesso/usuario/BuscaUsuario.jsp" redirect="false"/>    
</action>

<action 
    path="/Usuario/SelecionarUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.SearchUsuarioAction"
    scope="request">
    <forward name="success" path="/controleacesso/usuario/ListaUsuario.jsp" redirect="false"/>    
</action>

<action 
    path="/Usuario/ExcluirUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.DeleteUsuarioAction"
    scope="request">
    <forward name="success" path="/Usuario/SelecionarUsuario.do" redirect="false"/>    
</action>

<action 
    path="/Usuario/PrepareCreateUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.PrepareCreateUsuarioAction"
    scope="request">
    <forward name="success" path="/controleacesso/usuario/CadastraUsuario.jsp" redirect="false"/>    
</action>

<action 
    path="/Usuario/CreateUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.CreateUsuarioAction"
    scope="request">
    <forward name="success" path="/Usuario/SelecionarUsuario.do" redirect="false"/>    
</action>

<action 
    path="/Usuario/PrepareUpdateUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.PrepareUpdateUsuarioAction"
    scope="request">
    <forward name="success" path="/controleacesso/usuario/EditaUsuario.jsp" redirect="false"/>    
</action>

<action 
    path="/Usuario/UpdateUsuario" 
    name="usuarioForm"   
    type="br.com.digitaxi.controleacesso.usuario.actions.UpdateUsuarioAction"
    scope="request">
    <forward name="success" path="/Usuario/SelecionarUsuario.do" redirect="false"/>    
</action>

</action-mappings>

<message-resources key="Usuario" parameter="br.com.digitaxi.controleacesso.usuario.resource.UsuarioResources" />

</struts-config>
