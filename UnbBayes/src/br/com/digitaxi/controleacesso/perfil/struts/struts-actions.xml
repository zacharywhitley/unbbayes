<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

<action-mappings>

<action 
    path="/Perfil/PrepareSelecionarPerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.PrepareSearchPerfilAction"
    scope="request">
    <forward name="success" path="/controleacesso/perfil/BuscaPerfil.jsp" redirect="false"/>    
</action>

<action 
    path="/Perfil/SelecionarPerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.SearchPerfilAction"
    scope="request">
    <forward name="success" path="/controleacesso/perfil/ListaPerfil.jsp" redirect="false"/>    
</action>

<action 
    path="/Perfil/ExcluirPerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.DeletePerfilAction"
    scope="request">
    <forward name="success" path="/Perfil/SelecionarPerfil.do" redirect="false"/>    
</action>

<action 
    path="/Perfil/PrepareCreatePerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.PrepareCreatePerfilAction"
    scope="request">
    <forward name="success" path="/controleacesso/perfil/CadastraPerfil.jsp" redirect="false"/>    
</action>

<action 
    path="/Perfil/CreatePerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.CreatePerfilAction"
    scope="request">
    <forward name="success" path="/Perfil/SelecionarPerfil.do" redirect="false"/>    
</action>

<action 
    path="/Perfil/PrepareUpdatePerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.PrepareUpdatePerfilAction"
    scope="request">
    <forward name="success" path="/controleacesso/perfil/EditaPerfil.jsp" redirect="false"/>    
</action>

<action 
    path="/Perfil/UpdatePerfil" 
    name="perfilForm"   
    type="br.com.digitaxi.controleacesso.perfil.actions.UpdatePerfilAction"
    scope="request">
    <forward name="success" path="/Perfil/SelecionarPerfil.do" redirect="false"/>    
</action>

</action-mappings>

<message-resources key="Perfil" parameter="br.com.digitaxi.controleacesso.perfil.resource.PerfilResources" />

</struts-config>
