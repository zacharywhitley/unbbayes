<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
  	<fileSet>
      <directory>plugins/unbbayes.datamining/icons</directory>
      <outputDirectory>icons</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.datamining/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>plugin.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.datamining/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
      <!-- Only include UnBMiner-specific libs - do not include UnBBayes' dependency -->
        <include>plot*.jar</include>
        <include>miglayout15-swing*.jar</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>

