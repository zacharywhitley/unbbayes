<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
   <fileSet>
      <directory>plugins/unbbayes.io.mebn.UbfIO2</directory>
      <outputDirectory>../unbbayes.io.mebn.UbfIO2</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
   <fileSet>
      <directory>pr-owl/</directory>
      <outputDirectory>resources/pr-owl</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <!-- The following resources were included in test in order to stop being included in the main JAR -->
    <!-- without reconfiguring eclipse's classpath or maven's default folder's behaviors  -->
  	<fileSet>
      <directory>src/test/resources</directory>
      <outputDirectory>resources</outputDirectory>
      <includes>
        <include>class.gif</include>
        <include>individual.gif</include>
        <include>properties.png</include>
        <include>properties2node.png</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/test/resources/protege</directory>
      <outputDirectory>resources/protege</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.gui.mebn.ontology.protege/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>plugin.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.gui.mebn.ontology.protege/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>examples/</directory>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <excludes>
      	<exclude>unbbayes*.jar</exclude>
      </excludes>
      <unpack>false</unpack>
      <scope>runtime</scope>      
    </dependencySet>
  </dependencySets>
</assembly>

