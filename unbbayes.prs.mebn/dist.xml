<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
  	<fileSet>
      <directory>plugins/unbbayes.prs.mebn/icons</directory>
      <outputDirectory>icons</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.prs.mebn/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>plugin.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.prs.mebn/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory></directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>RELEASE.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>pr-owl/</directory>
      <outputDirectory>resources/pr-owl</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>plugins/unbbayes.io.mebn.UbfIO/</directory>
      <outputDirectory>../unbbayes.io.mebn.UbfIO/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>examples/</directory>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
      	<!-- Only include MEBN-specific libs - do not include UnBBayes' dependency -->
      	<!-- The format should be groupId:artificatId -->
        <include>guess:iri</include>
        <include>guess:jena</include>
        <include>guess:powerloom</include>
        <include>guess:stella</include>
        <include>guess:protege-owl</include>
        <include>guess:protege</include>
        <include>xerces:xercesImpl</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>

